<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="#F0F0F0"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="16dp"
                android:layout_marginBottom="8dp"
                android:background="#FFFFFF">
                <Button
                    android:id="@+id/button1"
                    android:layout_width="410dp"
                    android:layout_height="133dp"
                    android:alpha=".0"/>
                <ImageView
                    android:id="@+id/blameImage"
                    android:layout_width="140dp"
                    android:layout_height="120dp"
                    android:layout_marginEnd="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img8">
                </ImageView>
                <TextView
                    android:id="@+id/blameTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wykład"
                    android:textSize="24dp"
                    android:textColor="#000000"
                    android:alpha="0.87"
                    android:layout_marginTop="40dp"
                    android:layout_toEndOf="@id/blameImage">
                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="16dp"
                android:layout_marginBottom="8dp"
                android:background="#FFFFFF">
                <Button
                    android:id="@+id/button2"
                    android:layout_width="410dp"
                    android:layout_height="133dp"
                    android:alpha=".0"/>
                <ImageView
                    android:id="@+id/blameImage2"
                    android:layout_width="140dp"
                    android:layout_height="120dp"
                    android:layout_marginEnd="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img9">
                </ImageView>
                <TextView
                    android:id="@+id/blameTitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kody źródłowe"
                    android:textSize="24dp"
                    android:textColor="#000000"
                    android:alpha="0.87"
                    android:layout_marginTop="40dp"
                    android:layout_toEndOf="@id/blameImage2">
                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="16dp"
                android:layout_marginBottom="8dp"
                android:background="#FFFFFF">
                <Button
                    android:id="@+id/button3"
                    android:layout_width="410dp"
                    android:layout_height="133dp"
                    android:alpha=".0"/>
                <ImageView
                    android:id="@+id/blameImage3"
                    android:layout_width="140dp"
                    android:layout_height="120dp"
                    android:layout_marginEnd="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img10">
                </ImageView>
                <TextView
                    android:id="@+id/blameTitle3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quiz"
                    android:textSize="24dp"
                    android:textColor="#000000"
                    android:alpha="0.87"
                    android:layout_marginTop="40dp"
                    android:layout_toEndOf="@id/blameImage3">
                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="16dp"
                android:layout_marginBottom="8dp"
                android:background="#FFFFFF">
                <Button
                    android:id="@+id/button4"
                    android:layout_width="410dp"
                    android:layout_height="133dp"
                    android:alpha=".0"/>
                <ImageView
                    android:id="@+id/blameImage4"
                    android:layout_width="140dp"
                    android:layout_height="120dp"
                    android:layout_marginEnd="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img11">
                </ImageView>
                <TextView
                    android:id="@+id/blameTitle4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Źródła informacji"
                    android:textSize="24dp"
                    android:textColor="#000000"
                    android:alpha="0.87"
                    android:layout_marginTop="40dp"
                    android:layout_toEndOf="@id/blameImage4">
                </TextView>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <!-- <Button
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Order now"
         android:backgroundTint="#6C5D83"
         android:textColor="#FFFFFF"
         android:padding="20dp"
         android:layout_alignParentBottom="true"/>-->
</RelativeLayout>